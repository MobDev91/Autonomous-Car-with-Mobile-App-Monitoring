<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/trip_card_background"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Trip Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_trip_small"
                android:tint="@color/primary_color" />

            <TextView
                android:id="@+id/trip_datetime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dec 15, 2024 14:30"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/trip_efficiency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢ Good"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Trip Details Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_distance"
                        android:tint="@color/icon_tint" />

                    <TextView
                        android:id="@+id/trip_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2.5 km"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_speed"
                        android:tint="@color/icon_tint" />

                    <TextView
                        android:id="@+id/trip_speed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.2 km/h"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_time"
                        android:tint="@color/icon_tint" />

                    <TextView
                        android:id="@+id/trip_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30m 15s"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_battery_small"
                        android:tint="@color/icon_tint" />

                    <TextView
                        android:id="@+id/trip_battery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15% used"
                        android:textSize="13sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginStart="6dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>